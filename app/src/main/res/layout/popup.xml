<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/page">

    <TextView
        android:id="@+id/popup_txtDate"
        android:text="@string/nodate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        />

    <TextView
        android:id="@+id/popup_txtTime"
        android:text="@string/notime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_txtDate"
        android:layout_margin="@dimen/fab_margin"/>

    <TextView
        android:id="@+id/popup_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/example"
        android:layout_below="@id/popup_txtTime"
        android:layout_margin="@dimen/fab_margin" />

    <ImageButton
        android:id="@+id/popup_del"
        android:background="@drawable/ic_dltbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin" />

    <ImageButton
        android:id="@+id/popup_back"
        android:background="@drawable/ic_backbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom ="true"
        android:layout_alignParentStart="true"
        android:layout_margin = "@dimen/fab_margin" />

    <ImageButton
        android:id="@+id/popup_clock"
        android:background="@drawable/ic_timbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/popup_cal"
        android:layout_toStartOf="@+id/popup_del" />

    <ImageButton
        android:id="@+id/popup_cal"
        android:background="@drawable/ic_calbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="19dp"
        android:layout_alignBottom="@+id/popup_back"
        android:layout_toEndOf="@+id/popup_back" />

</RelativeLayout>